<h1>Add A Page</h1>
<%= form_for @page do |f| %>
  <fieldset>
    <legend>Page Info</legend>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br />
    <%= f.label :author %>
    <%= f.text_field :author %>
    <br />
    <%= f.label :body %>
    <%= f.text_area :body %>
    <br />
    <%= f.submit %>
  </fieldset>
<% end %>
